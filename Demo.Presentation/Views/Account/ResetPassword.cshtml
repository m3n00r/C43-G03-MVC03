@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
    <div class="agileits-top">
        <form asp-action="SendResetPasswordLink" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <input asp-for="Password" placeholder="New Password" >
            <span asp-validation-for="Password"></span>
            <br />
            <input asp-for="ConfirmPassword" placeholder="Confirm New Password">
            <span asp-validation-for="ConfirmPassword"></span>
            <br />
            <input type="submit" value="Send Reset Password Link">
        </form>
        <p> <a asp-action="Login">Cancel</a></p>
    </div>
</div>
